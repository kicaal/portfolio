---
import { projects } from "../utils/projects";
---

<section class="flex flex-col gap-5">
  <h2 class="text-left font-bold text-3xl lg:text-4xl">Projects</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
    {
      projects.map((project) => (
        <article>
          <a
            class="flex flex-col gap-2 stream"
            href={project.href}
            target="_blank"
          >
            <div class="stream-bg">
              <img
                src={project.image}
                class="stream__thumbnail aspect-video"
                alt=""
              />
            </div>
            <div class="flex flex-col gap-2 md:flex-row justify-between md:items-end">
              <p class="text-xl font-semibold">{project.title}</p>
              <p class="text-sm opacity-60">Published: {project.publishedAt}</p>
            </div>
          </a>
        </article>
      ))
    }
  </div>
</section>

<style>
  .stream-bg {
    position: relative;
    display: block;
    @apply bg-gradient-to-r from-blueGradient to-pinkGradient h-fit;
  }

  .stream-bg:before,
  .stream-bg:after {
    content: "";
    display: block;
    width: 8px;
    height: 8px;
    position: absolute;
    transition: all 0.15s ease;
  }

  .stream-bg:before {
    @apply bg-gradient-to-r from-blueGradient to-blueGradient;
  }

  .stream-bg:after {
    @apply bg-gradient-to-r from-pinkGradient to-pinkGradient;
  }

  .stream-bg:before {
    top: 0;
    left: 0;
    transform-origin: top left;
    transform: rotate(-45deg) scale(0);
  }

  .stream-bg:after {
    right: 0;
    bottom: 0;
    transform-origin: bottom right;
    transform: rotate(45deg) scale(0);
  }

  .stream__thumbnail {
    width: 100%;
    display: block;
    transform: translate(0, 0);
    transition: all 0.15s ease;
    position: relative;
    z-index: 10;
  }

  .stream:hover .stream-bg .stream__thumbnail {
    transform: translate(6px, -6px);
  }

  .stream:hover .stream-bg:before {
    transform: rotate(-45deg) scale(1);
  }

  .stream:hover .stream-bg:after {
    transform: rotate(45deg) scale(1);
  }
</style>
